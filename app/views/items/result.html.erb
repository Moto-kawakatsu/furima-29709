<%# <%= render "shared/header" %>

  <% if @results.length !=0 %>
  <div class ="Q">
  <h1 class="q">
    こちらの商品をお探しでしょうか？
  </h1>
<%= link_to 'はい', "#" ,class: "response" %>
<%= link_to 'いいえ', items_search_path, class: "response" %>
</div>
<div class='item-contents'>
 <ul class='item-lists'>
   <% @results.each do |result| %>
    <td>
    <br>
    <li class='list'>
    <% unless result.order.present? %>
    <div class="item-img-content">
      <%= link_to item_path(result.id) do %>
      <%= image_tag result.image, class: "item-img" %>
      <% end %>
    </div>

    <div class='item-info'>
     <h3 class='item-name'>
         <%= result.name %>
     </h3>
     <div class='item-price'>
         <span><%= result.price %>円<br>(税込み)</span>
           <div class='heart-btn'>
            <% if user_signed_in? && current_user.already_liked?(result) %>
            <%= link_to item_likes_path(result), method: :delete do %>
              <i class="heart-color4">♥</i>
            <% end %>
            <% elsif user_signed_in? && current_user.id == result.user_id%>
              <i class="heart-color4">♥</i>
            <% else %>
              <%= link_to item_likes_path(result), method: :post do %>
               <i class="heart-color3">♥</i>
               <% end %>
            <% end %>
            <%= result.likes.count %>
           </div>
     </div>        
    </div>
    </li>
    <% else %>
       該当する商品はありません
    <% end %>  
<% end %>
<br>
</ul>
</div>
<% end %>
<%= link_to 'トップページに戻る', root_path, class: "move-to-top" %>

